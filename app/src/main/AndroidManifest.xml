<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notes">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_notes"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_notes_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme.Maroon">
        <activity
            android:name=".activities.NewPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AddingNewNoteActivity"
            android:label="@string/newNote" />
        <activity
            android:name=".activities.SettingActivity"
            android:label="@string/settings" />
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.PasswordActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>